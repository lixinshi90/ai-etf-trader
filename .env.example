# ============================================================================
# AI ETF Trader - Environment Configuration Example
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control (it's in .gitignore)
# ============================================================================

# ---- LLM / AI Configuration ----
OPENAI_API_KEY=your_api_key_here
BASE_URL=https://open.bigmodel.cn/api/paas/v4
MODEL_NAME=glm-4-air
TIMEOUT_SECONDS=120
MAX_RETRIES=5
FALLBACK_MODELS=glm-4-air,glm-4-flash

# ---- ETF Configuration ----
CORE_ETF_LIST=510050,159915,510300
OBSERVE_ETF_LIST=512100,512660,512800
ETF_LIST=510050,159915,510300,512100,512660,512800
ETF_NAME_MAP=510050:华夏沪深300,159915:易方达创业板

# ---- Strategy Configuration ----
STRATEGY_MODE=AGGRESSIVE
BREAKOUT_N=20
RSI_N=2
RSI_LOW=10
RSI_HIGH=95
KDJ_LOW=20

# ---- Qlib Integration (Optional) ----
QLIB_FACTOR_ENABLED=true
QLIB_ALGO_ENABLED=false
QLIB_DIR=./data/qlib/cn_etf
QLIB_REGION=cn
QLIB_TOPK_LOOKBACK=60
QLIB_TOPK_K=2

# ---- AI Decision Configuration ----
DAILY_AI_CALLS_LIMIT=3
ENABLE_ENSEMBLE=false
ENSEMBLE_MODE=CONSENSUS

# ---- Position Management ----
ENABLE_DYNAMIC_POSITION=false
BASE_POSITION_PCT=0.2
MIN_POSITION_PCT=0.05
MAX_POSITION_PCT=0.3

# ---- Risk Control ----
HARD_STOP_LOSS_PCT=0.0
QUICK_TAKE_PROFIT_TRIGGER=0.0
QUICK_TAKE_PROFIT_SELL_RATIO=0.0
ENABLE_TRAILING_STOP=false
TRAILING_STOP_PCT=0.05
TRAILING_STEP_PCT=0.01

# ---- Cost & Slippage ----
COST_BPS=5
SLIPPAGE_BPS=2

# ---- Account Configuration ----
INITIAL_CAPITAL=100000

# ---- Scheduling ----
SCHEDULE_TIME=17:00

# ---- Data Fetcher Configuration ----
DATA_FETCH_TIMEOUT=30

# ---- Logging ----
LOG_LEVEL=INFO
LOG_FILE=logs/daily.log

# ---- Web Server Configuration ----
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
FLASK_DEBUG=false

# ---- Database Configuration ----
ETF_DB_PATH=data/etf_data.db
TRADE_DB_PATH=data/trade_history.db

# ---- Filter Configuration ----
FILTER_ENABLED=true
MIN_AVG_TURNOVER=10
MIN_LISTING_MONTHS=6
